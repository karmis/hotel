{% extends 'BrainstrapBundlesFrontBundle::layout_content_detail.html.twig' %}
{% set active_item_menu = "holiday" %}
{% set template_letter = "С" %}
{% set template_caption= "Связаться" %}
{% set template_descr= "с нами" %}
{% set content_right_caption = "Форма обратной связи" %}
{% set slider_enabled = false %}
{% set detail_type = false %}


{% block preview_content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        {% include 'BrainstrapBundlesFrontBundle::Blocks/alert.html.twig' with {
        'label': flashMessage,
        'body':'Проверьте правильность заполнения полейи',
        'block_type':'attention'
        } only %}
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        {% include 'BrainstrapBundlesFrontBundle::Blocks/alert.html.twig' with {
        'label': flashMessage,
        'body':'С вами свяжутся в ближайшее время',
        'block_type':'success'
        } only %}
    {% endfor %}

    {{ form_start(form) }}
    <div class="form-group">
        <label class="label-control">
            Заголовок<span class="start">*</span>
        </label>
        {{ form_widget(form.caption, { 'attr': {'class': 'input-control validate-caption', 'placeholder': 'Заголовок'} }) }}
        <div class="inputErrors bs-alert bs-alert-error">
            {{ form_errors(form.caption) }}
        </div>
    </div>

    <div class="form-group">
        <label class="label-control">
            Телефон<span class="start">*</span>
        </label>
        {{ form_widget(form.phone, { 'attr': {'class': 'input-control validate-phone', 'placeholder': 'Заголовок'} }) }}
        <div class="inputErrors bs-alert bs-alert-error">
            {{ form_errors(form.phone) }}
        </div>
    </div>

    <div class="form-group">
        <label class="label-control">
            Email
        </label>
        {{ form_widget(form.email, { 'attr': {'class': 'input-control validate-email', 'placeholder': 'Заголовок'} }) }}
        <div class="inputErrors bs-alert bs-alert-error">
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="form-group">
        <label class="label-control">
            Сообщение
        </label>
        {{ form_widget(form.description, { 'attr': {'class': 'input-control validate-description', 'placeholder': 'Заголовок'} }) }}
        <div class="inputErrors bs-alert bs-alert-error">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_widget(form.submit, { 'attr': {'class': 'input-control'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock preview_content %}
