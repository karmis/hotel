{% extends 'BrainstrapBundlesFrontBundle::layout_content_modify.html.twig' %}
{% set active_item_menu = "object" %}
{% set template_letter = "М" %}
{% set template_caption= "Места" %}
{% set template_descr= "список типов мест" %}
{% set content_right_caption = "Список типов мест" %}
{% set prefix_route = "object_objectberth" %}
{% set slider_enabled = false %}
{% set detail_type = "edit" %}



{% block preview_content %}
                <div class="form-group">
                    <label class="label-control">
                        Заголовок<span class="start">*</span>
                    </label>
                    {{ form_widget(edit_form.caption, { 'attr': {'class': 'input-control validate-caption', 'placeholder': 'Заголовок'} }) }}
                    <div class="inputErrors bs-alert bs-alert-error">
                        {{ form_errors(edit_form.caption) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="label-control">
                        Взрослых мест<span class="start">*</span>
                    </label>
                    {{ form_widget(edit_form.countPeople, { 'attr': {'class': 'input-control validate-caption', 'placeholder': 'Взрослых мест'} }) }}
                    <div class="inputErrors bs-alert bs-alert-error">
                        {{ form_errors(edit_form.countPeople) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="label-control">
                        Детских мест<span class="start">*</span>
                    </label>
                    {{ form_widget(edit_form.countChild, { 'attr': {'class': 'input-control validate-caption', 'placeholder': 'Детских мест'} }) }}
                    <div class="inputErrors bs-alert bs-alert-error">
                        {{ form_errors(edit_form.countChild) }}
                    </div>
                </div>

{% endblock preview_content %}

