        Дата заезда
    </label>

    <div class="booking-form select-black" style="max-width: 100%;">
        <label class="collapse input">
            {{ form_widget(form.startDate, {"attr":{"class":"input-control bs-date-datepicker date-startDate" }, 'autocomplete':'false'}) }}
            {#<input type="text" id="arrival-date" class="input-control border-white">#}
        </label>
    </div>
</div>
