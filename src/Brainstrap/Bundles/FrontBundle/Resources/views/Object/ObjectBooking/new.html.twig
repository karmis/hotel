        {{ form_errors(form.name) }}
    </div>
</div>

<div class="form-group" style="width: 100%">
    <label class="label-control">
        Ваша фамилия<span class="start">*</span>
    </label>
    {{ form_widget(form.sname, { 'attr': {'class': 'input-control validate-name', 'placeholder': 'Ваша фамилия'} }) }}
    <div class="inputErrors bs-alert bs-alert-error">
        {{ form_errors(form.name) }}
    </div>
</div>

<div class="form-group" style="width: 100%">
